<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/rounded"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="45dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:id="@+id/preview_url"
                android:src="@mipmap/ic_launcher"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/exersior_dark"/>

            <TextView
                android:id="@+id/preview_name"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="Canada"
                android:layout_below="@+id/preview_url"
                android:layout_centerHorizontal="true"
                android:textColor="@color/exersior_dark"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />

        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/groupInner_item_registDate"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/exersior_dark"
        android:text=" : 2019/04/01"/>

    <TextView
        android:id="@+id/groupInner_item_level"
        android:layout_alignParentRight="true"
        android:layout_below="@id/groupInner_item_registDate"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/exersior_dark"
        android:text="관리자"/>



</RelativeLayout>