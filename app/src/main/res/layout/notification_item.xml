<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/notification_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded"
    android:padding="5dp"
    android:layout_marginTop="2dp">

    <TextView
        android:id="@+id/notification_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항 내용"
        android:textColor="@color/blue_grey_900"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/notification_item_writer"
        android:layout_below="@id/notification_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/blue_grey_900"
        android:textSize="12sp"
        android:text="작성자" />

    <TextView
        android:id="@+id/notification_item_date"
        android:layout_below="@id/notification_item_content"
        android:layout_toEndOf="@id/notification_item_writer"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_grey_900"
        android:textSize="12sp"
        android:text="2019/04/01" />


</RelativeLayout>