<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_jaksim1">

    <ImageView
        android:id="@+id/goalItem_grade"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/grade_q"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/goalList_title"
        android:text="title"
        android:layout_toEndOf="@id/goalItem_grade"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/goalItem_days"
        android:layout_below="@id/goalList_title"
        android:layout_toEndOf="@id/goalItem_grade"
        android:layout_marginStart="5dp"
        android:text="#화수목"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/goalItem_complete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@id/goalItem_plan_time"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/grade_complete"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/plan_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:text="0%"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/goalItem_plan_time"
        android:clickable="true"
        android:layout_below="@id/plan_percentage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"/>

</RelativeLayout>