<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Fragments.ChatFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/index_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_grey_900"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
            app:popupTheme="@style/MenuStyle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/group_userProfileImage"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/group_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="username"
                android:textColor="#fff"
                android:textStyle="bold"/>

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/groupList_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_grey_900"
            app:tabIndicatorColor="@color/blue_grey_900"
            app:tabSelectedTextColor="#fff"
            app:tabTextColor="#fff">

            <android.support.design.widget.TabItem
                android:id="@+id/entered_group_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="채팅"/>

            <android.support.design.widget.TabItem
                android:id="@+id/group_peed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그룹 피드"/>

            <android.support.design.widget.TabItem
                android:id="@+id/group_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그룹 정보"/>

        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"/>

</RelativeLayout>